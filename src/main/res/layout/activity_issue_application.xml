<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="bean"
            type="com.example.storescontrol.bean.SampleApplicationBean" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.storescontrol.view.sampleapplication.IssueApplicationActivity">
    <include
        android:id="@+id/l_title"
        layout="@layout/layout_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_margin="@dimen/layout_margin"
                    android:text="销售人员"
                    style="@style/item_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:text="@{bean.s_SaleMan}"
                    android:hint="请选择"
                    android:id="@+id/tv_personnel"
                    android:layout_alignParentRight="true"
                    style="@style/Text_selector"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_margin="@dimen/layout_margin"
                    android:text="部门"
                    style="@style/item_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    style="@style/Edittext_right"
                    android:text="@{bean.s_DepName}"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_margin="@dimen/layout_margin"
                    android:text="客户名称"
                    style="@style/item_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/tv_recordcompany"
                    android:text="@{bean.r_RecordCompany}"
                    android:hint="请选择"
                    android:layout_alignParentRight="true"
                    style="@style/Text_selector"
                    android:layout_width="200dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_margin="@dimen/layout_margin"
                    android:text="联系人"
                    style="@style/item_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/et_s_person"
                    style="@style/Edittext_right"
                    android:hint="请填入"
                    android:text="@{bean.s_ContactPerson}"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_margin="@dimen/layout_margin"
                    android:text="联系电话"
                    style="@style/item_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/et_s_phone"
                    android:inputType="number"
                    style="@style/Edittext_right"
                    android:hint="请填入"
                    android:text="@{bean.s_ContactPhone}"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_margin="@dimen/layout_margin"
                    android:text="联系地址"
                    style="@style/item_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/et_s_address"
                    style="@style/Edittext_right"
                    android:hint="请填入"
                    android:text="@{bean.s_ContactAddress}"
                    />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/b_applicationdetails"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="增加明细"
                android:textColor="@color/blue"
                android:background="@color/zxing_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_margin="@dimen/layout_margin"
                    android:text="代理商"
                    style="@style/item_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:hint="请选择"
                    android:text="@{bean.r_MemberAgents}"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_agent"
                    style="@style/Text_selector"
                    android:layout_width="200dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_margin="@dimen/layout_margin"
                    android:text="联系人"
                    style="@style/item_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/et_m_person"
                    style="@style/Edittext_right"
                    android:hint="请填入"
                    android:text="@{bean.s_ContactPerson_M}"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_margin="@dimen/layout_margin"
                    android:text="联系电话"
                    style="@style/item_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/et_m_phone"
                    android:inputType="number"
                    style="@style/Edittext_right"
                    android:hint="请填入"
                    android:text="@{bean.s_ContactPhone_M}"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_margin="@dimen/layout_margin"
                    android:text="联系地址"
                    style="@style/item_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/et_m_address"
                    style="@style/Edittext_right"
                    android:hint="请填入"
                    android:text="@{bean.s_ContactAddress_M}"
                    />
            </RelativeLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="图片："
                    style="@style/textview" />
                <ImageButton
                    android:layout_margin="@dimen/layout_margin"
                    android:scaleType="fitXY"

                    android:background="@mipmap/ic_upload"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/l_batch"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="附件："
                    style="@style/textview" />
                <ImageButton
                    android:layout_margin="@dimen/layout_margin"
                    android:scaleType="fitXY"
                    android:id="@+id/ib_upload"
                    android:background="@mipmap/ic_upload"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView

                    android:gravity="center_vertical"
                    style="@style/textview"
                    android:id="@+id/tv_key"
                    android:text="客户试用反馈意见或建议（一周内）："
                    />
                <EditText
                    android:id="@+id/et_feedback"
                    android:hint="发出后一周内反馈客户试用反馈意见或建议"
                    android:padding="5dp"
                    android:gravity="start"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_border"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView

                    android:gravity="center_vertical"
                    style="@style/textview"

                    android:text="备注："
                    />
                <EditText
                    android:id="@+id/et_memo"
                    android:hint="请输入"
                    android:padding="5dp"
                    android:gravity="start"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_border"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>
            <Button
                android:id="@+id/b_submit"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="提交"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
</layout>